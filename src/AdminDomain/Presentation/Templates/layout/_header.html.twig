<header class="bg-gray-800 text-white shadow-sm w-full z-10">
    <div class="flex items-center justify-between py-3 px-5">
        <div class="flex items-center gap-4">
            <span class="font-bold text-lg whitespace-nowrap">CMS Admin</span>
        </div>

        <button
            type="button"
            class="ml-4 px-3 py-2 rounded bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600 transition"
            onclick="toggleDarkMode()"
            title="Toggle dark mode"
        >
        </button>

        <!-- Переключатель языков -->
        <div class="flex items-center gap-2">
            {% set current_route = app.request.attributes.get('_route') %}
            {% set current_params = app.request.attributes.get('_route_params') %}
            {% set locales = supported_locales %}

            {% for locale in locales %}
                <a href="{{ path(current_route, current_params|merge({'_locale': locale})) }}"
                   class="text-sm px-3 py-1 rounded {{ app.request.locale == locale ? 'bg-blue-600 text-white' : 'text-gray-300 hover:bg-gray-700' }}">
                    {{ locale|upper }}
                </a>
            {% endfor %}
        </div>
    </div>
</header>
