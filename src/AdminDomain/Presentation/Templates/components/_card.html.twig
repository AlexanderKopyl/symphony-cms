{# Card component for dashboard and other pages #}
{#
Usage:
{% include '@Admin/components/_card.html.twig' with {
    title: 'Card Title',
    description: 'Card description',
    icon: 'users', 
    link: path('admin_users'),
    stats: '125', 
    color: 'blue' 
} %}
#}

{% set cardColor = color|default('blue') %}
{% set cardLink = link|default(null) %}

<div class="bg-white dark:bg-gray-900 overflow-hidden shadow rounded-lg">
    {% if cardLink %}
        <a href="{{ cardLink }}" class="flex h-full gap-5 items-center p-5 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200">
    {% endif %}
      
    {% if icon is defined %}
            <div class="w-8 h-8 bg-{{ cardColor }}-100 rounded-md  items-center justify-center flex-shrink-0">
                {% include '@Admin/components/_icon.html.twig' with {name: icon, class: 'w-5 h-5 text-' ~ cardColor ~ '-600'} %}
            </div>
    {% endif %}
    
    <div class="w-0 flex-1">
        <dl>
            {% if title is defined %}
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                    {{ title }}
                </dt>
            {% endif %}
            
            {% if stats is defined %}
                <dd class="text-lg font-medium text-gray-900 dark:text-white">
                    {{ stats }}
                </dd>
            {% endif %}
            
            {% if description is defined %}
                <dd class="text-sm text-gray-600 dark:text-gray-300 mt-1">
                    {{ description }}
                </dd>
            {% endif %}
        </dl>
    </div>
    
    {% if cardLink %}
        </a>
    {% endif %}
</div>
