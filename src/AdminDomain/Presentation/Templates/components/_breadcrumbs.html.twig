{# Breadcrumbs component #}
{#
Usage:
{% include '@Admin/components/_breadcrumbs.html.twig' with {
    items: [
        {label: 'Dashboard', route: 'admin_dashboard'},
        {label: 'Users', route: 'admin_users'},
        {label: 'Edit User'}
    ]
} %}
#}

{% if items is defined and items|length > 0 %}
    <nav class="flex p-3" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            {% for item in items %}
                <li class="inline-flex items-center">
                    {% if not loop.first %}
                        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                    {% endif %}
                    
                    {% if item.route is defined and not loop.last %}
                        <a href="{{ path(item.route) }}" 
                           class="inline-flex items-center text-sm font-medium text-gray-700 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 ml-1 md:ml-2">
                            {% if loop.first %}
                                {% include '@Admin/components/_icon.html.twig' with {name: 'dashboard', class: 'w-4 h-4 mr-2'} %}
                            {% endif %}
                            {{ item.label }}
                        </a>
                    {% else %}
                        <span class="text-sm font-medium text-gray-500 dark:text-gray-300 ml-1 md:ml-2">
                            {{ item.label }}
                        </span>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    </nav>
{% endif %}
