{% extends '@Admin/layout/base.html.twig' %}

{% block title %}{{ 'admin.dashboard.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mx-auto py-6">


        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
                {{ 'admin.dashboard.welcome'|trans }}
            </h1>
            <p class="mt-2 text-gray-600 dark:text-gray-400">
                {{ 'admin.dashboard.description'|trans }}
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            {% include '@Admin/components/_card.html.twig' with {
                title: 'admin.dashboard.users'|trans,
                description: 'admin.dashboard.users_description'|trans,
                icon: 'users',
                link: path('admin_user_index'),
                stats: '25',
                color: 'blue'
            } %}
            
            {% include '@Admin/components/_card.html.twig' with {
                title: 'admin.dashboard.content'|trans,
                description: 'admin.dashboard.content_description'|trans,
                icon: 'content',
                link: '#',
                stats: '156',
                color: 'green'
            } %}
            
            {% include '@Admin/components/_card.html.twig' with {
                title: 'admin.dashboard.settings'|trans,
                description: 'admin.dashboard.settings_description'|trans,
                icon: 'settings',
                link: '#',
                color: 'purple'
            } %}
        </div>
    </div>
{% endblock %}
