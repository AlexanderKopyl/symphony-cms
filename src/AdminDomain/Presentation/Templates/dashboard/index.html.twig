{% extends '@Admin/layout/base.html.twig' %}

{% block title %}{{ 'admin.dashboard.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4">
            {{ 'admin.dashboard.welcome'|trans }}
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white dark:bg-gray-800 p-6 rounded shadow">
                <h2 class="text-lg font-bold text-gray-700 dark:text-gray-200 mb-2">
                    {{ 'admin.dashboard.users'|trans }}
                </h2>
                <p class="text-gray-500 dark:text-gray-400 text-sm">
                    {{ 'admin.dashboard.users_description'|trans }}
                </p>
            </div>
            <div class="bg-white dark:bg-gray-800 p-6 rounded shadow">
                <h2 class="text-lg font-bold text-gray-700 dark:text-gray-200 mb-2">
                    {{ 'admin.dashboard.settings'|trans }}
                </h2>
                <p class="text-gray-500 dark:text-gray-400 text-sm">
                    {{ 'admin.dashboard.settings_description'|trans }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}
