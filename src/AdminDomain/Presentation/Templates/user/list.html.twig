{% extends '@Admin/layout/base.html.twig' %}

{% block title %}Пользователи{% endblock %}

{% block body %}
    <h1 class="mb-4">Список пользователей</h1>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Username</th>
            <th>Роль</th>
            <th>Аватар</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    {% if user.avatar %}
                        <img src="{{ asset(user.avatar) }}" alt="avatar" style="height: 40px;" class="rounded-circle">
                    {% else %}
                        <span class="text-muted">Нет</span>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Нет пользователей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
